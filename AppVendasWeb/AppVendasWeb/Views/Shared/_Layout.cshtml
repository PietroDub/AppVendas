<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AppVendasWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AppVendasWeb.styles.css" asp-append-version="true" />
</head>
<body style="background:linear-gradient( 110.8deg, rgba(55,255,226,1) 1.4%, rgba(0,25,167,1) 96.4% )">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark  text-ligth border-bottom box-shadow mb-3" style="background:rgb(64, 162, 227)">
            <div class="container-fluid ">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AppVendasWeb</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
                    <ul class="navbar-nav flex-grow-1">
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Dropdown button
                            </button>
                            <ul class="dropdown-menu dropdown-menu-info">
                                <li><a class="dropdown-item active" href="#">Não sei</a></li>
                                <li><a class="dropdown-item" href="#">Nem adianta</a></li>
                                <li><a class="dropdown-item" href="#">quem sabe no ultimo</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="https://youtu.be/pSDFwJcDJC0?si=FD6WZH-YmJVGuXZe">Pode clicar vai 😑 </a></li>
                            </ul>
                        </div>
                        <li class="nav-item">

                            <a class="" asp-area="" asp-controller="Home" asp-action="Index">

                                <svg bootstrap-icon="House" width="16" height="16" aria-label="House"></svg>
                                Home
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="" asp-area="" asp-controller="Clientes" asp-action="Index">
                                <svg bootstrap-icon="EmojiNeutral" width="16" height="16" aria-label="EmojiNeutral"></svg>
                                Clientes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="" asp-area="" asp-controller="Categorias" asp-action="Index">
                                <svg bootstrap-icon="File" width="16" height="16" aria-label="File"></svg>

                                Categorias
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="" asp-area="" asp-controller="Produtos" asp-action="Index">
                                <svg bootstrap-icon="Cart" width="16" height="16" aria-label="File"></svg>

                                Produtos
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="" asp-area="" asp-controller="Vendas" asp-action="Index">
                                <svg bootstrap-icon="Bag" width="16" height="16" aria-label="File"></svg>

                                Vendas
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="" asp-area="" asp-controller="ItensDaVendas" asp-action="Index">
                                <svg bootstrap-icon="Bag" width="16" height="16" aria-label="File"></svg>

                                ItensDaVenda
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-light text-center" style="background:rgb(23, 107, 135)">
        <div class="container">
            &copy; 2024 - AppVendasWeb -<a class="text-light" <a asp-area="" asp-controller="Home" asp-action="Privacy">Política de privacidade</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
